{% extends 'base.html.twig' %}

{% block title %}Liste des Articles{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Liste des Articles</h1>
        <a href="{{ path('article_new') }}" class="btn btn-primary mb-3">Nouvel Article</a>

        {% if articles %}
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Prix</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for article in articles %}
                        <tr>
                            <td>{{ article.nom }}</td>
                            <td>{{ article.prix }}</td>
                            <td>
                                <a href="{{ path('article_show', {id: article.id}) }}" class="btn btn-info">Détails</a>
                                <a href="{{ path('article_edit', {id: article.id}) }}" class="btn btn-warning">Modifier</a>
                                <a href="{{ path('article_delete', {id: article.id}) }}" class="btn btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet article ?')">Supprimer</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p>Aucun article trouvé</p>
        {% endif %}
    </div>
{% endblock %} 