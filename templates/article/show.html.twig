{% extends 'base.html.twig' %}

{% block title %}Détails de l'Article{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Détails de l'Article</h1>

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">{{ article.nom }}</h5>
                <p class="card-text">Prix: {{ article.prix }}</p>
            </div>
        </div>

        <div class="mt-3">
            <a href="{{ path('article_edit', {id: article.id}) }}" class="btn btn-warning">Modifier</a>
            <a href="{{ path('article_list') }}" class="btn btn-secondary">Retour à la liste</a>
        </div>
    </div>
{% endblock %} 